#version 440

in vec3 v_normal;

out vec4 color;

void main() {
    vec4 I = vec4(0.8, 0.5, 0.5, 1.0);
    vec3 light_dir = normalize(vec3(0.3, 0.3, 0.3));
   
    // TODO : Complete light equation
    color = I * dot(v_normal, light_dir);
}

